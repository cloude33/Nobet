<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules file for Google backup functionality.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include shared preferences for backing up app settings -->
        <include domain="sharedpref" path="."/>
        
        <!-- Exclude any sensitive data files if needed -->
        <!-- <exclude domain="sharedpref" path="device.xml"/> -->
    </cloud-backup>
    
    <device-transfer>
        <!-- Include shared preferences for device transfer -->
        <include domain="sharedpref" path="."/>
        
        <!-- Exclude any sensitive data files if needed -->
        <!-- <exclude domain="sharedpref" path="device.xml"/> -->
    </device-transfer>
</data-extraction-rules>